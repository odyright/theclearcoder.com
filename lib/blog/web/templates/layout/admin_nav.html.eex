<%= if @current_user do %>
  <div class="admin-nav">
    <p><b><%= @current_user.username %></b></p>
    <ol>
      <li><%= link "New Article", to: article_path(@conn, :new) %></li>
      <li><%= link "Branding", to: branding_path(@conn, :index) %></li>
      <li><%= link "Users", to: user_path(@conn, :index) %></li>
      <li>
        <%= link "Sign out", 
        to: session_path(@conn, :delete, @current_user),
        method: "delete" %>
      </li>
    </ol>
  </div>
<% end %>
