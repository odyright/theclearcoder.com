<article>
  <h1><%= @podcast.title %></h1>
  <time datetime="<%= iso8601_date(@podcast.inserted_at) %>"><%= readable_date(@podcast.inserted_at) %></time>
  <section itemprop="articleBody">
    <p><%= to_html(@podcast.description) %></p>
    <p>Episode #<%= @podcast.episode %> • <%= readable_date(@podcast.inserted_at) %> • <%= @podcast.run_time_minutes %> MIN</p>
    <audio controls preload="none">
      <source src="<%= @podcast.file_url %>" type="audio/mp3">
      No audio support!
    </audio>
    <p>Download: <a href="<%= @podcast.file_url %>">MP3 Audio</a> (<%= @podcast.file_size_mbytes %>MB)</p>
  </section>
</article>
